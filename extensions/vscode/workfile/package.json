{
  "name": "workfile",
  "displayName": "workfile",
  "description": "Workfile - Project Markdown",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "workfile",
        "aliases": [
          "Workfile",
          "workfile"
        ],
        "extensions": [
          ".workfile",
          ".work"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "workfile",
        "scopeName": "html.markdown",
        "path": "./syntaxes/workfile.tmLanguage.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "token", 
        "description": "Workfile tokens"
      }
    ],
    "colors": [
      {
        "id": "token",
        "description": "Workfile tokens",
        "defaults": {
          "dark": "errorForeground",
          "light": "errorForeground"
        }
      }
    ]
  }
}